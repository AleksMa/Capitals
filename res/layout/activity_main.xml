<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/BasicGameBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.mamaevalexey.capitals.MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/CountryText"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_normal"
            android:gravity="center"
            android:text="Назовите столицу государства"
            android:textAlignment="center"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button20"
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:onClick="buttonClicked"
            android:text="Button"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button21"
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/button20"
            android:layout_below="@+id/button20"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:onClick="buttonClicked"
            android:text="Button"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button22"
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/button21"
            android:layout_below="@+id/button21"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:onClick="buttonClicked"
            android:text="Button"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button23"
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/button22"
            android:layout_below="@+id/button22"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:onClick="buttonClicked"
            android:text="Button"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/linearLayout1"
        android:layout_gravity="left"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ScoreText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/button_normal"
            android:text="Счет: 0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18dp" />

        <Button
            android:id="@+id/NewGameButton"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            android:onClick="buttonClicked"
            android:text="Новая игра"
            android:textSize="18dp" />
    </LinearLayout>

</RelativeLayout>